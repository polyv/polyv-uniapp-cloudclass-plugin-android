<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link_mic_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/link_mic_brush_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#353535"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.easefun.polyv.commonui.widget.PolyvMediaCheckView
            android:id="@+id/controller_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderColor="@color/white"
            app:mainColor="#FF5B5B" />

        <com.easefun.polyv.commonui.widget.PolyvMediaCheckView
            android:id="@+id/controller_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderColor="@color/white"
            app:mainColor="#3BA4FF" />

        <com.easefun.polyv.commonui.widget.PolyvMediaCheckView
            android:id="@+id/controller_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderColor="@color/white"
            app:mainColor="#FFE35B" />

        <ImageView
            android:id="@+id/controller_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:src="@drawable/polyv_controller_link_erase_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/link_mic_bottom_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controller_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/polyv_controller_link_brush_selector"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/controller_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/polyv_controller_link_mic_selector" />

        <ImageView
            android:id="@+id/controller_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/polyv_controller_link_cam_selector" />

        <ImageView
            android:id="@+id/controller_camera_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btncamex" />

        <ImageView
            android:id="@+id/controller_link_mic_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btnbye" />
    </LinearLayout>

    <com.easefun.polyv.commonui.widget.PolyvLookAtMeView
        android:id="@+id/controller_look_at_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:src="@drawable/btn_look_at_me"
        android:visibility="gone" />
</LinearLayout>