<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_controller_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout

        android:id="@+id/fl_gradient_bar_land"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:scaleType="fitXY"
            android:src="@drawable/polyv_video_top_gradient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/polyv_video_bottom_gradient" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_video_back_land"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/iv_video_pause_land"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/selector_controller_play_and_pause" />

    <ImageView
        android:id="@+id/video_refresh_land"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignTop="@id/iv_video_pause_land"
        android:layout_toRightOf="@id/iv_video_pause_land"
        android:src="@drawable/refresh" />


    <ImageView
        android:id="@+id/video_ppt_change_switch_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/polyv_ppt_sub_selector" />

    <ImageView
        android:id="@+id/video_danmu_land"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="34dp"
        android:layout_toLeftOf="@id/video_ppt_change_switch_land"
        android:src="@drawable/selector_controller_danmu_switch"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/video_hands_up_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/video_ppt_change_switch_land"
        android:layout_alignLeft="@id/video_ppt_change_switch_land"
        android:layout_marginRight="@dimen/controller_margin"
        android:layout_marginBottom="@dimen/controller_margin"
        android:src="@drawable/polyv_mic_phone_selector"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_more_land"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/controller_more" />


    <TextView
        android:id="@+id/tv_start_send_danmu_land"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignTop="@id/video_refresh_land"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@id/video_danmu_land"
        android:layout_toRightOf="@id/video_refresh_land"
        android:background="@drawable/shape_et_send_danmu"
        android:gravity="center"
        android:imeOptions="flagNoFullscreen|flagNoExtractUi"
        android:text="发个弹幕呗"
        android:textColor="#7FFFFFFF"
        android:textSize="12sp" />


</RelativeLayout>